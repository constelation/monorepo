{
  "scripts": {
    "storybook": "start-storybook -p 9001",
    "test-storybook": "storyshots",
    "deploy-storybook": "storybook-to-ghpages",
    "clean": "lerna exec -- rimraf dist",
    "prebuild": "npm run clean",
    "build": "lerna exec -- babel *.js -d dist --ignore *.native.js,*.js.flow && lerna exec -- find . -maxdepth 1 -name *.native.js -exec cp {} dist \\; && lerna exec -- find . -maxdepth 1 -name *.js.flow -exec cp {} dist \\;",
    "prepublish": "npm run build",
    "publish": "lerna publish"
  },
  "devDependencies": {
    "@kadira/storybook": "^2.20.1",
    "@kadira/storybook-deployer": "^1.2.0",
    "@kadira/storyshots": "^1.1.3",
    "babel-cli": "^6.18.0",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-preset-es2015": "^6.18.0",
    "babel-preset-react": "^6.16.0",
    "babel-preset-stage-0": "^6.16.0",
    "flow-bin": "^0.34.0",
    "glamor": "^2.17.12",
    "lerna": "2.0.0-beta.24",
    "lodash": "^4.13.1",
    "raf": "^3.3.0",
    "react": "^15.2.1",
    "react-addons-shallow-compare": "^15.3.1",
    "react-native-web": "0.0.48",
    "rimraf": "^2.5.4"
  }
}
